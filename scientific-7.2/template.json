{
    "variables": {
        "version": "0.0.0",
        "timezone": "Europe/London",
        "locale": "en_GB.UTF-8",
        "build_script_base": "yes",
        "build_script_vagrant": "yes",
        "build_script_virtualbox": "yes",
        "build_script_cleanup": "yes",
        "build_script_zerodisk": "yes",
        "ssh_fullname": "vagrant",
        "ssh_password": "vagrant",
        "ssh_username": "vagrant",
        "hostname": "vagrant",
        "os_version": "7.2",
        "iso_url": "http://ftp1.scientificlinux.org/linux/scientific/7x/x86_64/iso/SL-7.2-DVD-x86_64-2016-02-02.iso",
        "iso_checksum": "6dde5cade3c88d7b56be8b997fa6469f9dd7fefa",
        "iso_checksum_type": "sha1",
        "headless": "false",
        "disk_size": "40960",
        "cpuexecutioncap": "66",
        "cpus": "2",
        "memory": "4096"
    },
    "builders": [{
        "type": "virtualbox-iso",
        "guest_os_type": "RedHat_64",
        "vm_name": "scientific-{{ user `os_version` }}",
        "headless": "{{ user `headless` }}",
        "disk_size": "{{ user `disk_size` }}",
        "vboxmanage": [
            [ "modifyvm", "{{ .Name }}", "--cpuexecutioncap", "{{ user `cpuexecutioncap` }}" ],
            [ "modifyvm", "{{ .Name }}", "--cpus", "{{ user `cpus` }}" ],
            [ "modifyvm", "{{ .Name }}", "--memory", "{{ user `memory` }}" ]
        ],
        "iso_url": "{{ user `iso_url` }}",
        "iso_checksum": "{{ user `iso_checksum` }}",
        "iso_checksum_type": "{{ user `iso_checksum_type` }}",
        "http_directory": "http",
        "boot_wait": "5s",
        "boot_command": [
            "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/scientific-{{ user `os_version` }}/ks.cfg<enter><wait>"
        ],
        "ssh_wait_timeout": "60m",
        "ssh_password": "{{ user `ssh_password` }}",
        "ssh_username": "{{ user `ssh_username` }}",
        "shutdown_command": "echo '{{ user `ssh_password` }}' | sudo -S shutdown -P now"
    }],
    "provisioners": [{
        "type": "shell",
        "execute_command": "echo '{{ user `ssh_password` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
        "environment_vars": [
            "BUILD_SCRIPT_BASE={{ user `build_script_base` }}",
            "BUILD_SCRIPT_VAGRANT={{ user `build_script_vagrant` }}",
            "BUILD_SCRIPT_VIRTUALBOX={{ user `build_script_virtualbox` }}",
            "BUILD_SCRIPT_CLEANUP={{ user `build_script_cleanup` }}",
            "BUILD_SCRIPT_ZERODISK={{ user `build_script_zerodisk` }}",
            "BUILD_TIMEZONE={{ user `timezone` }}",
            "BUILD_LOCALE={{ user `locale` }}",
            "SSH_USERNAME={{ user `ssh_username` }}",
            "SSH_PASSWORD={{ user `ssh_password` }}"
        ],
        "scripts": [
            "scientific-{{ user `os_version` }}/scripts/00-base.sh",
            "scientific-{{ user `os_version` }}/scripts/01-vagrant.sh",
            "scientific-{{ user `os_version` }}/scripts/02-virtualbox.sh",
            "scientific-{{ user `os_version` }}/scripts/03-cleanup.sh",
            "scientific-{{ user `os_version` }}/scripts/04-zerodisk.sh"
        ]
    }],
    "post-processors": [{
        "type": "vagrant",
        "output": "artifacts/scientific-{{ user `version` }}-{{ .Provider }}.box",
        "keep_input_artifact": false
    }]
}
